{
  "manifest_version": 3,
  "name": "RSVP extension",
  "version": "1.0",
  "description": "Allows you to read via rsvp.",
  "permissions": ["activeTab", "contextMenus", "scripting","storage"],

  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "start_rsvp": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Reads selected text via rsvp method."
    }
  },
  
  "background": {
    "service_worker": "background.js"
  }
}
